.button {
  display: inline-block;
  border-radius: 4px;
  background-color: #228B22;
  border: none;
  color: #000000 ;
  text-align: center;
  font-size: 28px;
  padding: 20px;
  width: 200px;
  transition: all 0.5s;
  cursor: pointer;
  margin: 5px;  position: absolute;
  top: 70%;
  left: 90%;
  transform: translate(-370%, 50%);
  -ms-transform: translate(-50%, -50%);
  
}

.button span {
  cursor: pointer;
  display: inline-block;
  position: relative;
  transition: 0.5s;
}

.button span:after {
  content: '\00bb';
  position: absolute;
  opacity: 0;
  top: 0;
  right: -20px;
  transition: 0.5s;
}

.button:hover span {
  padding-right: 25px;
}

.button:hover span:after {
  opacity: 1;
  right: 0;
}

